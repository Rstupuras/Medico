@page
@model Login.DoctorModel
@{
    ViewData["Title"] = "Login page";
}
@{
    Layout = "_Login";
}
  <div class="container py-5" >
    <div class="row">
        <div class="col-md-12">
            <div class="row mt-5">
                <div class="col-md-6 mx-auto">
                    <img class="mx-auto pb-5 d-block" src="~/images/medicologo.png" alt="" height="300">
                    <div class="card rounded-0">
                        @if (ViewData["Error"] != null)
                        {
                            <div class="alert alert-danger" role="alert">
                                @ViewData["Error"]
                            </div>
                        }
                        <div class="card-header">
                            <h3 class="mb-0">Login Doctor</h3>
                        </div>
                        <div class="card-body ">
                            <form class="form" role="form" method="post" asp-page-handler="Login">
                                <div class="form-group">
                                    <label for="username">Username</label>
                                    <input type="text" class="form-control form-control-lg rounded-0" id="username" name="username" required="required">
                                    <div class="invalid-feedback">Oops, you missed this one.</div>
                                </div>
                                <div class="form-group">
                                    <label>Password</label>
                                    <input type="password" class="form-control form-control-lg rounded-0" id="password" name="password" required="required">
                                </div>
                                <button type="submit" class="btn btn-primary btn-lg float-right" id="btnLogin">Login</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
