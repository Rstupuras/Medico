@page
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model Pat.BookAppointmentModel
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Book appointment";
}



<div class="container shadow p-5 bg-light rounded mt-3">
    <h1 class="display-4 border-bottom">Fill out all fields to book appointment</h1>
    <form method="post" asp-page-handler="BookAppointment">
        <div class="form-group">
            <label asp-for="newAppointment.Reason" class="control-label"></label>
            <input asp-for="newAppointment.Reason" class="form-control" required="required" />

        </div>
        <div class="form-group">
            <label asp-for="doctor" class="control-label"></label>
            <select asp-for="doctor.ID" class="form-control" required="required"
                    asp-items="@Model.doctors">
                <option value="">-- Select Doctor --</option>
            </select>
            <span asp-validation-for="doctor" class="text-danger" />
        </div>

        <div class="form-group ">
            <label asp-for="newAppointment.DateTime" class="control-label"></label>
            <input asp-for="newAppointment.DateTime" class="form-control" required="required" />
        </div>
        <button type="submit" class="btn btn-primary btn-lg" asp-page-handler="BookAppointment">Book appointment</button>
    </form>


</div>
@if (ViewData["Message"] != null)
{
    <h6 class="text-center mt-3"> @ViewData["Message"]</h6>
}