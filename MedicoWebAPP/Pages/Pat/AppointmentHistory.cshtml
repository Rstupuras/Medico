@page
@using Microsoft.AspNetCore.Authorization
@inject IAuthorizationService AuthorizationService
@model Pat.AppointmentHistoryModel
@{
    Layout = "_Layout";
}
@{
    ViewData["Title"] = "Appointment history";
}



<div class="text-center ml-5 mr-5">
    @if (Model.Appointments.Count == 0)
    {
        <h1 class="display-4">There are no  appointments</h1>
    }
    else
    {
        <a class="btn btn-primary mb-3 mr-3 float-left" asp-page="/Pat/BookAppointment">Book new appointment</a>

        <table class="table">
            <thead class="thead-light">
                <tr>
                    <th>
                        ID
                    </th>
                    <th>
                        Doctor Name
                    </th>
                    <th>
                        Reason/Cause
                    </th>
                    <th>
                        Summary
                    </th>
                    <th>
                        Is Viewed
                    </th>
                    <th>
                        Date
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.Appointments)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.ID)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Doctor.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Reason)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Summary)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IsViewed)
                        </td>

                        <td>
                            @Html.DisplayFor(modelItem => item.DateTime)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    }


</div>